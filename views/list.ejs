    <h4 class="ml-2 my-3">DB에서 가져온 todo 리스트</h4>
    <ul class="list-group">
        <% for (var i=0; i < posts.length; i++){ %>
            <li class="list-group-item">
                <p>글번호 : <%= posts[i]._id %>
                </p>
                <h4>
                    할일 제목 : <%= posts[i].제목 %>
                </h4>
                <p>
                    할일 마감날짜 : <%= posts[i].날짜 %>
                </p>
                <button class="delete" data-id="<%= posts[i]._id %>">삭제</button>
            </li>
            <% } %>
    </ul>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script>
        $('.delete').click((e) => {
            let 글번호 = e.target.dataset.id;
            $.ajax({
                method: 'DELETE',
                url: '/delete',
                data: { _id: 글번호 }
            }).done((결과) => {

            })
        })
    </script>


